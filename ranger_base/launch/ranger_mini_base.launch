<launch> 
    <args name="port_name" default="can0"/>
    <args name="is_ranger_mini" default="true"/>
    <args name="simulated_robot" default="false"/>
    <args name="odom_topic_name" default="odom"/>

    <node name="ranger_base_node" pkg="ranger_base" type="ranger_base_node" output="screen">
        <param name="is_scout_mini" type="bool" value="$(arg is_scout_mini)" />
        <param name="port_name" type="string" value="$(arg port_name)" />
        <param name="simulated_robot" type="bool" value="$(arg simulated_robot)" />
        <param name="odom_frame" type="string" value="odom" />
        <param name="base_frame" type="string" value="base_link" />
        <param name="odom_topic_name" type="string" value="$(arg odom_topic_name)" /> 
    </node>
</launch>